<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/crop">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8sp"
            android:gravity="center"
            android:layout_marginTop="50sp"
            android:background="@drawable/line"
            android:paddingBottom="40dip">

            <View
                android:id="@+id/View2"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:background="@drawable/stage1"/>
            <TextView
                android:id="@+id/upper"
                android:layout_marginTop="20sp"
                android:includeFontPadding="false"
                android:layout_width="260sp"
                android:layout_height="wrap_content"
                android:text="NAME THE CELEBRITY"
                android:padding="10sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#87CEEB"/>

            <View
                android:id="@+id/View1"
                android:layout_width="260sp"
                android:layout_height="220sp"
                android:background="@drawable/kevinhart"/>

            <TextView
                android:layout_marginTop="10sp"
                android:padding="15sp"
                android:id="@+id/button1"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:text="KEVIN HART"
                android:background="@drawable/custom_button"
                android:onClick="act11"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <TextView
                android:padding="15sp"
                android:layout_marginTop="10sp"

                android:id="@+id/button2"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:text="CHRIS TAKER"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:background="@drawable/custom_button"
                android:onClick="act12"
                android:gravity="center_horizontal" />

            <TextView
                android:padding="15sp"
                android:layout_marginTop="10sp"
                android:id="@+id/button3"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:text="TREVOR NOAH"
                android:background="@drawable/custom_button"
                android:onClick="act13"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>